<%= form_with(model: subscriber, local: true) do |form| %>
  <% if subscriber.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscriber.errors.count, "error") %> Prišlo je do naslednje napake:</h2>

      <ul>
      <% subscriber.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :ime, :class => "col-sm-2 col-form-label" %>
    <%= form.text_field :ime, id: :subscriber_ime, class: "form-control" %>
  </div>

  <div class="field form-group row">
    <%= form.label :priimek, :class => "col-sm-2 col-form-label" %>
    <%= form.text_field :priimek, id: :subscriber_priimek, class: "form-control" %>
  </div>

  <div class="field form-group row">
    <%= form.label :email, :class => "col-sm-2 col-form-label" %>
    <%= form.text_field :email, id: :subscriber_email, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit 'Naroči', :class => 'btn btn-outline-primary' %>
  </div>
<% end %>

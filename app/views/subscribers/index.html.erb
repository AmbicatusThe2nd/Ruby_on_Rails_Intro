<p id="notice"><%= notice %></p>

<h1>Naročniki</h1>

<table class=table>
  <thead>
    <tr>
      <th scope="col">Ime</th>
      <th scope="col">Priimek</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.ime %></td>
        <td><%= subscriber.priimek %></td>
        <td><%= subscriber.email %></td>
        <td><%= link_to 'Prikaži', subscriber, {class: "btn btn-outline-success"} %></td>
        <td><%= link_to 'Uredi', edit_subscriber_path(subscriber), {class: "btn btn-outline-warning"} %></td>
        <td><%= link_to 'Izbriši', subscriber, method: :delete, data: { confirm: 'Ste prepričani?' }, :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p class="h3"> Nisi še med naročniki? </p>
<%= link_to 'Naroči se', new_subscriber_path, {class: "btn btn-outline-primary"} %>
